# Exemplo de uso
calc = Calculadora()

print(calc.calcular('adicionar', 10))  # Adiciona 10
print(calc.calcular('subtrair', 3))    # Subtrai 3 (resultado anterior é limpo)
print(calc.calcular('multiplicar', 5)) # Multiplica por 5 (resultado anterior é limpo)
print(calc.calcular('dividir', 2))     # Divide por 2 (resultado anterior é limpo)
print(calc.calcular('dividir', 0))     # Divisão por zero
